# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

[*.{js,css,scss,vue,json,html,py}]
charset = utf-8

[*.{js,json}}]
indent_style = space
indent_size = 2

[*.{css,html}]
indent_style = tab
indent_size = 4

[*.{scss}]
indent_style = spaces
indent_size = 2

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2